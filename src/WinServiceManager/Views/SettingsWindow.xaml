<Window x:Class="WinServiceManager.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="设置"
        Height="480" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F0F0F0">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 设置内容区域 -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- 日志设置组 -->
                <GroupBox Header="日志设置" Padding="15" Background="White">
                    <StackPanel>
                        <CheckBox Content="启用调试日志 (DEBUG)"
                                  IsChecked="{Binding IsDebugLoggingEnabled}"
                                  Margin="0,0,0,10"/>

                        <TextBlock Text="说明：启用调试日志将记录更详细的信息，有助于排查问题，但会增加日志文件大小。"
                                   Foreground="#666"
                                   FontSize="11"
                                   TextWrapping="Wrap"
                                   Margin="20,0,0,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- 列显示设置组 -->
                <GroupBox Header="列显示设置" Padding="15" Background="White" Margin="0,10,0,0">
                    <StackPanel>
                        <CheckBox Content="显示启动状态列"
                                  IsChecked="{Binding ShowStartupStatusColumn}"
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="显示启动参数列"
                                  IsChecked="{Binding ShowArgumentsColumn}"
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="显示状态列"
                                  IsChecked="{Binding ShowStatusColumn}"
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="显示依赖列"
                                  IsChecked="{Binding ShowDependenciesColumn}"
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="显示描述列"
                                  IsChecked="{Binding ShowDescriptionColumn}"
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="显示可执行文件列"
                                  IsChecked="{Binding ShowExecutableColumn}"
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="显示创建时间列"
                                  IsChecked="{Binding ShowCreatedColumn}"
                                  Margin="0,0,0,8"/>
                    </StackPanel>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>

        <!-- 按钮区域 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="保存"
                    Command="{Binding SaveSettingsCommand}"
                    Width="80"
                    Height="35"
                    Margin="0,0,10,0"
                    Background="#4CAF50"
                    Foreground="White"/>
            <Button Content="取消"
                    Command="{Binding CancelCommand}"
                    Width="80"
                    Height="35"
                    Background="#757575"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
