<Window x:Class="WinServiceManager.Views.LogViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:WinServiceManager.Converters"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="700" Width="1000"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterOwner"
        Background="#F0F0F0">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:FileSizeConverter x:Key="FileSizeConverter"/>

        <!-- 日志级别颜色样式 -->
        <Style x:Key="LogTraceStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#9E9E9E"/>
        </Style>
        <Style x:Key="LogDebugStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#607D8B"/>
        </Style>
        <Style x:Key="LogInfoStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#212121"/>
        </Style>
        <Style x:Key="LogWarningStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF9800"/>
        </Style>
        <Style x:Key="LogErrorStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#F44336"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="LogFatalStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#B71C1C"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 工具栏 -->
        <Border Grid.Row="0" Background="White" Padding="15,10" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 服务信息行 -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 服务名称 -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="服务:" FontWeight="Bold" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding ServiceName}" FontWeight="Bold" Foreground="#2196F3"/>
                    </StackPanel>

                    <!-- 文件信息 -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="文件大小: "/>
                        <TextBlock Text="{Binding LogFileSize, Converter={StaticResource FileSizeConverter}}"
                                   FontWeight="Bold"/>
                        <TextBlock Text=" | " Margin="10,0"/>
                        <TextBlock Text="最后修改: "/>
                        <TextBlock Text="{Binding LastModified, StringFormat='yyyy-MM-dd HH:mm:ss'}"
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Grid>

                <!-- 控制按钮行 -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 日志类型选择 -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="日志类型:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <RadioButton Content="输出日志 (*.out.log)"
                                     IsChecked="{Binding SelectedLogType, Converter={StaticResource StringToBooleanConverter}, ConverterParameter=Output}"
                                     Margin="0,0,15,0"/>
                        <RadioButton Content="错误日志 (*.err.log)"
                                     IsChecked="{Binding SelectedLogType, Converter={StaticResource StringToBooleanConverter}, ConverterParameter=Error}"
                                     Margin="0,0,15,0"/>
                        <RadioButton Content="包装器日志 (*.wrapper.log)"
                                     IsChecked="{Binding SelectedLogType, Converter={StaticResource StringToBooleanConverter}, ConverterParameter=Wrapper}"/>
                    </StackPanel>

                    <!-- 选项 -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <CheckBox Content="自动滚动"
                                  IsChecked="{Binding AutoScroll}"/>
                    </StackPanel>

                    <!-- 操作按钮 -->
                    <StackPanel Grid.Column="4" Orientation="Horizontal">
                        <ToggleButton Content="监控"
                                      IsChecked="{Binding IsMonitoring, Mode=OneWay}"
                                      Command="{Binding ToggleMonitoringCommand}"
                                      Width="60"
                                      Margin="0,0,8,0"
                                      Background="#FF9800"
                                      Foreground="White"/>
                        <Button Content="刷新"
                                Command="{Binding RefreshCommand}"
                                Padding="12,6"
                                Margin="0,0,5,0"/>
                        <Button Content="清空"
                                Command="{Binding ClearLogsCommand}"
                                Background="#F44336"
                                Foreground="White"
                                Padding="12,6"
                                Margin="0,0,5,0"/>
                        <Button Content="保存"
                                Command="{Binding SaveLogsCommand}"
                                Background="#4CAF50"
                                Foreground="White"
                                Padding="12,6"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- 主内容区 -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 日志显示区域 -->
            <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 过滤栏 -->
                    <Border Grid.Row="0" Background="#F5F5F5" Padding="10,5" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1"
                            Visibility="{Binding ShowFilterBar, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="过滤:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox Grid.Column="1"
                                     Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="5"/>
                            <Button Grid.Column="2"
                                    Content="应用"
                                    Command="{Binding ApplyFilterCommand}"
                                    Padding="10,5"/>
                            <Button Grid.Column="4"
                                    Content="清除"
                                    Command="{Binding ClearFilterCommand}"
                                    Padding="10,5"/>
                        </Grid>
                    </Border>

                    <!-- 日志内容 -->
                    <ScrollViewer Grid.Row="1"
                                  Name="LogScrollViewer"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto"
                                  Padding="10"
                                  VirtualizingPanel.IsVirtualizing="True"
                                  VirtualizingPanel.VirtualizationMode="Recycling">
                        <ItemsControl ItemsSource="{Binding FilteredLogLines}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"
                                               FontFamily="Consolas"
                                               FontSize="12"
                                               TextWrapping="NoWrap"
                                               Margin="0,0,0,2">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#212121"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding}" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- 加载指示器 -->
                    <Grid Background="#80000000"
                          Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <ProgressBar IsIndeterminate="True"
                                         Width="200"
                                         Height="20"
                                         Foreground="White"/>
                            <TextBlock Text="正在加载日志..."
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,0"
                                       Foreground="White"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- 分隔符 -->
            <GridSplitter Grid.Row="1"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"
                         Background="Transparent"
                         Visibility="{Binding ShowFilterBar, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <!-- 过滤选项栏（可折叠） -->
            <Expander Grid.Row="2"
                      Header="日志选项"
                      IsExpanded="False"
                      Background="White"
                      BorderBrush="#E0E0E0"
                      BorderThickness="1,0,1,1"
                      Padding="10">
                <Grid Margin="10,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 最大行数 -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="最大行数:" VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="-"
                                Command="{Binding DecreaseMaxLinesCommand}"
                                Width="25"
                                Height="25"
                                Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding MaxLines}"
                                   MinWidth="50"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"/>
                        <Button Content="+"
                                Command="{Binding IncreaseMaxLinesCommand}"
                                Width="25"
                                Height="25"
                                Margin="5,0,0,0"/>
                    </StackPanel>

                    <!-- 显示过滤按钮 -->
                    <Button Grid.Row="0" Grid.Column="2"
                            Content="显示过滤器"
                            Command="{Binding ToggleFilterBarCommand}"
                            Padding="10,5"/>

                    <!-- 刷新间隔 -->
                    <TextBlock Grid.Row="0" Grid.Column="4" Text="刷新间隔(秒):" VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="0" Grid.Column="5" Orientation="Horizontal" VerticalAlignment="Center">
                        <Slider Value="{Binding RefreshInterval}"
                                Minimum="1"
                                Maximum="60"
                                Width="100"/>
                        <TextBlock Text="{Binding RefreshInterval}"
                                   MinWidth="30"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Expander>
        </Grid>

        <!-- 状态栏 -->
        <Border Grid.Row="2" Background="White" Padding="15,8" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 行数信息 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="行数:"/>
                    <TextBlock Text="{Binding LogLines.Count}" FontWeight="Bold" Margin="5,0,0,0"/>
                    <TextBlock Text="/" Margin="5,0,0,0"/>
                    <TextBlock Text="{Binding FilteredLogLines.Count}" FontWeight="Bold" Margin="5,0,0,0"/>
                    <TextBlock Text="(已过滤)" Margin="5,0,0,0"
                               Visibility="{Binding IsFilterApplied, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>

                <!-- 状态信息 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="状态:"/>
                    <TextBlock Text="{Binding Status}" FontWeight="Bold" Margin="5,0,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#4CAF50"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Status}" Value="错误">
                                        <Setter Property="Foreground" Value="#F44336"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="警告">
                                        <Setter Property="Foreground" Value="#FF9800"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <!-- 最后更新时间 -->
                <TextBlock Grid.Column="4"
                           Text="{Binding LastUpdated, StringFormat='最后更新: HH:mm:ss'}"
                           Foreground="#757575"/>
            </Grid>
        </Border>
    </Grid>
</Window>