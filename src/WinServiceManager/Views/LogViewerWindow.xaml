<Window x:Class="WinServiceManager.Views.LogViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:WinServiceManager.Converters"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="650" Width="1000"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterOwner"
        Background="#F0F0F0">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:StringToBooleanConverter x:Key="StringToBooleanConverter"/>
        <converters:FileSizeConverter x:Key="FileSizeConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 工具栏 -->
        <Border Grid.Row="0" Background="White" Padding="15,10" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 服务信息行 -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 服务名称 -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="服务:" FontWeight="Bold" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding ServiceName}" FontWeight="Bold" Foreground="#2196F3"/>
                    </StackPanel>

                    <!-- 文件信息 -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="文件大小: "/>
                        <TextBlock Text="{Binding LogFileSize, Converter={StaticResource FileSizeConverter}}"
                                   FontWeight="Bold"/>
                        <TextBlock Text=" | " Margin="10,0"/>
                        <TextBlock Text="最后修改: "/>
                        <TextBlock Text="{Binding LastModified, StringFormat='yyyy-MM-dd HH:mm:ss'}"
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Grid>

                <!-- 控制按钮行 -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 日志类型选择 -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="日志类型:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox ItemsSource="{Binding AvailableLogTypes}"
                                  SelectedItem="{Binding SelectedLogType}"
                                  Width="150"
                                  VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- 选项 -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <CheckBox Content="自动滚动"
                                  IsChecked="{Binding AutoScroll}"/>
                        <CheckBox Content="监控"
                                  IsChecked="{Binding IsMonitoring}"
                                  Command="{Binding ToggleMonitoringCommand}"
                                  Margin="10,0,0,0"/>
                    </StackPanel>

                    <!-- 操作按钮 -->
                    <StackPanel Grid.Column="4" Orientation="Horizontal">
                        <Button Content="刷新"
                                Command="{Binding RefreshCommand}"
                                Padding="12,6"
                                Margin="0,0,5,0"/>
                        <Button Content="清空"
                                Command="{Binding ClearLogsCommand}"
                                Background="#F44336"
                                Foreground="White"
                                Padding="12,6"
                                Margin="0,0,5,0"/>
                        <Button Content="保存"
                                Command="{Binding SaveLogsCommand}"
                                Background="#4CAF50"
                                Foreground="White"
                                Padding="12,6"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- 主内容区 -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 过滤栏 -->
            <Border Grid.Row="0" Background="#F5F5F5" Padding="10,5" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="过滤:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox Grid.Column="1"
                             Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                             Padding="5"/>
                </Grid>
            </Border>

            <!-- 日志内容 -->
            <Border Grid.Row="1" Background="White">
                <Grid>
                    <!-- 日志显示区域 -->
                    <ScrollViewer Name="LogScrollViewer"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto"
                                  Padding="10"
                                  ScrollChanged="LogScrollViewer_ScrollChanged">
                        <ItemsControl ItemsSource="{Binding LogLines}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"
                                               FontFamily="Consolas"
                                               FontSize="12"
                                               TextWrapping="NoWrap"
                                               Margin="0,0,0,2">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#212121"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding}" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- 加载指示器 -->
                    <Grid Background="#80000000"
                          Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <ProgressBar IsIndeterminate="True"
                                         Width="200"
                                         Height="4"
                                         Foreground="White"/>
                            <TextBlock Text="正在加载日志..."
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,0"
                                       Foreground="White"
                                       FontSize="14"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- 状态栏 -->
        <Border Grid.Row="2" Background="White" Padding="15,8" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 行数信息 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="行数:"/>
                    <TextBlock Text="{Binding LogLines.Count}" FontWeight="Bold" Margin="5,0,0,0"/>
                </StackPanel>

                <!-- 状态信息 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="状态:"/>
                    <TextBlock Text="{Binding Status}" FontWeight="Bold" Margin="5,0,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#4CAF50"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Status}" Value="错误">
                                        <Setter Property="Foreground" Value="#F44336"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="已停止">
                                        <Setter Property="Foreground" Value="#FF9800"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <!-- 最后更新时间 -->
                <TextBlock Grid.Column="4"
                           Text="{Binding LastUpdated, StringFormat='最后更新: HH:mm:ss'}"
                           Foreground="#757575"/>
            </Grid>
        </Border>
    </Grid>
</Window>
